---
import MainLayout from "../../layouts/MainLayout.astro";
import ArticlesView from "../../views/Articles";
import { getSharedStaticPaths, getPageData } from "../../lib/astro";

export const getStaticPaths = getSharedStaticPaths;

const { lang } = Astro.params;
const { langInfo } = Astro.props;
const data = await getPageData(lang, langInfo);

const title = `${import.meta.env.VITE_FULL_NAME} | ${data.translations?.navbar?.articles}`;
const description = `This is page for ${import.meta.env.VITE_FULL_NAME} (${import.meta.env.VITE_NICKNAME}) articles`;
---

<MainLayout
	initialData={data}
	title={title}
	image="/thumbnails/articles.png"
	description={description}
>
	<ArticlesView client:load data={data} />
</MainLayout>
